{
	"manifest_version": 2,

	"name": "Usual Usage on the Web",

	"description": "This extension is for education purpose",

	"version": "0.1",

	"permissions": ["notifications", "tabs", "downloads"],

	"background": {
		"scripts": ["Js/BackgroundScript.js"]
	},

	"icons": {              
		"16": "Img/Logo16px.png",
		"32": "Img/Logo32px.png",
		"48": "Img/Logo48px.png",
		"128": "Img/Logo128px.png"    
	},

	"browser_action": {
		"default_icon": {              
			"16": "Img/Logo16px.png",
			"32": "Img/Logo32px.png",
			"48": "Img/Logo48px.png",
			"128": "Img/Logo128px.png"    
		},
		"default_title": "Click Me",   
		"default_popup": "Index.html"
	},

	"content_scripts": [
	{
		"matches": ["*://*.utc.fr/*"],
		"js": ["Js/ContentScript.js"]
	}
	]
}
